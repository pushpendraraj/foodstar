<% include ../common/head.ejs%>
<% include ../common/header.ejs%>
<% include ../common/navigation.ejs%>
<div class="right_col" role="main">
    <div class="">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="x_panel">
            <div class="x_title">
              <h2>Resturants</h2>
              <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Settings 1</a>
                    </li>
                    <li><a href="#">Settings 2</a>
                    </li>
                  </ul>
                </li>
                <li><a class="close-link"><i class="fa fa-close"></i></a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <p class="text-muted font-13 m-b-30">
                List of active restaurants
              </p>
              <table id="datatable" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Code</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Min Order</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i<data.length; i++) { %>
                  <tr>
                    <td><%=data[i].restaurant_name%></td>
                    <td><%=data[i].restaurant_code%></td>
                    <td><%=data[i].user_name%></td>
                    <td><%=data[i].user_email%></td>
                    <td><%=data[i].contact_num%></td>
                    <td><%=data[i].min_order%></td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
              <% if (pageCount > 1) { %>
                <ul class="pagination">
                    <% if (currentPage > 1) { %>
                        <li><a href="/?page=1">&laquo;</a></li>
                    <% } %>
                    <% var i = 1;
                    if (currentPage > 5) {
                        i = +currentPage - 4;
                    } %>
                    <% if (i !== 1) { %>
                        <li class="disabled"><a href="#">...</a></li>
                    <% } %>
                    <% for (i; i<=pageCount; i++) { %>
                        <% if (currentPage == i) { %>
                            <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
                        <% } else { %>
                            <li><a href="/?page=<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == (+currentPage + 4)) { %>
                            <li class="disabled"><a href="#">...</a></li>
                        <% break; } %>
                    <% } %>
                    <% if (currentPage != pageCount) { %>
                        <li><a href="/?page=<%= pageCount %>">&raquo;</a></li>
                    <% } %>
                </ul>
            <% } %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
<% include ../common/footer.ejs%>