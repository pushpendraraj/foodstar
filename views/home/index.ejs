<% include ../common/head.ejs%>
<body>
<div class="login">
    <div class="login_wrapper">
      <div class="animate form login_form">
        <section id="login" class="login_content">
          <form method="POST" action="/customer/login" name="login" #loginForm class="form-horizontal form-label-left">
            <h1>Login With <%-configuration.projectName %></h1>
            <div class="form-group item <% if (messages.email) { %> bad <% } %>">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="customer-name">Customer Name
                <span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                <input type="text" class="form-control col-md-7 col-xs-12 has-feedback-left" placeholder="Email" value="<%- email %>" name="email" />
                <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
              </div>
              <% if (messages.email) { %>
                <div class="alert"><%- messages.email %></div>
              <% } %>
            </div>
            <div class="form-group item <% if (messages.password) { %> bad <% } %>">
              <label for="password" class="control-label col-md-3 col-sm-3 col-xs-12">Password </label>
              <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                <input id="password" placeholder="password" class="form-control col-md-7 col-xs-12 has-feedback-left"  value="<%- password %>" type="password" name="password">
                <span class="fa fa-ellipsis-h form-control-feedback left" aria-hidden="true"></span>
              </div>
              <% if (messages.password) { %>
                <div class="alert"><%- messages.password %></div>
              <% } %>
            </div>
            <div class="form-group item %>">
              <label for="submit" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <button type="submit" class="btn btn-default submit pull-left" >Log in</button>
                <a class="reset_pass" href="javascript:void(0);" onclick="javascript:$('#forgotPass').show();$('#login').hide();">Lost your password?</a>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="separator">
              <p class="change_link">New to site?
                <a href="#signup" class="to_register"> Create Account </a>
              </p>
              <div class="clearfix"></div>
              <div>
                <h1><img src="<%=host%>/<%=configuration.imageDir %>/<%=configuration.logo %>" alt="<%=configuration.projectName %>" /> </h1>
              </div>
            </div>
          </form>
        </section>
        <section id="forgotPass" style="display:none" class="login_content">
          <form method="POST" action="/customer/forgot" name="login" #loginForm class="form-horizontal form-label-left">
            <h1>Forgot your password?</h1>
            <div class="form-group item <% if (messages.email) { %> bad <% } %>">
              <label for="password" class="control-label col-md-3 col-sm-3 col-xs-12">Email </label>
              <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                <input id="email" placeholder="email" class="form-control col-md-7 col-xs-12 has-feedback-left"  value="<%- password %>" type="password" name="password">
                <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
              </div>
              <% if (messages.email) { %>
                <div class="alert"><%- messages.email %></div>
              <% } %>
            </div>
            <div class="form-group item %>">
              <label for="submit" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <button type="submit" class="btn btn-default submit pull-left" >Submit</button>
                <a class="reset_pass" href="javascript:void(0);" onclick="javascript:$('#forgotPass').hide();$('#login').show();">Login With us</a>
              </div>
            </div>
          </form>
        </section>
      </div>
    </div>
  </div>
  <script src="<%=host%>/js/jquery.min.js"></script>
</body>
</html>