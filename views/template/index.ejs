<% include ../common/head.ejs%>
<% include ../common/header.ejs%>
<% include ../common/navigation.ejs%>
<div class="right_col" role="main">
    <div class="">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="x_panel">
            <div class="x_title">
              <h2>Email Tempaltes</h2>
              <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                  <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Settings 1</a>
                    </li>
                    <li><a href="#">Settings 2</a>
                    </li>
                  </ul>
                </li>
                <li><a class="close-link"><i class="fa fa-close"></i></a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <p class="text-muted font-13 m-b-30">
                List of active email templates
              </p>
              <table id="datatable" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Key</th>
                    <th>From Name</th>
                    <th>From Email</th>
                    <th>Email Subject</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i<templates.length; i++) { %>
                  <tr>
                    <td><%=templates[i].template_name%></td>
                    <td><%=templates[i].template_key%></td>
                    <td><%=templates[i].from_name%></td>
                    <td><%=templates[i].from_email%></td>
                    <td><%=templates[i].email_subject%></td>
                    <td><%=templates[i].template_status%></td>
                    <td>
                      <a href="/template/view-template/tempalteId:<%=templates[i].template_id%>"><i class="fa fa-eye"></i></a> |
                      <a href="/template/view-template/tempalteId:<%=templates[i].template_id%>"><i class="fa fa-pencil"></i></a>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
<% include ../common/footer.ejs%>